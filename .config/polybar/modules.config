[module/rofi]
type = custom/text
content = 
content-padding = 2
content-background = #88FFFFFF
content-foreground = ${colors.color1}
click-left = rofi -show



[module/bspwm]
type = internal/bspwm

pin-workspaces = false
enable-scroll = false

format = "<label-monitor><label-state>"
format-padding = 2

label-monitor =

label-focused = %{T2}%{T-}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 2

label-urgent = %{T2}%{T-}
label-urgent-foreground = ${colors.color2}
label-urgent-padding = 2

label-occupied = %{T2}%{T-}
label-occupied-foreground = #60ffffff
label-occupied-padding = 2

label-empty = %{T2}%{T-}
label-empty-foreground = #60ffffff
label-empty-padding = 2



[module/xwindow]
type = internal/xwindow

label = %title:5:120:...%



[module/wireless-network]
type = internal/network

interface = wlp3s0

label-connected =  %essid%  %signal%%
label-disconnected =  %ifname%



[module/github]
type = internal/github

token = ${env:GITHUB_ACCESS_TOKEN}

empty-notifications = false

interval = 60

format-padding = 2
format-prefix = 
format-prefix-padding-right = 2
label = %notifications%



[module/backlight]
type = internal/xbacklight

enable-scroll = false
label =  %percentage%%
label-padding = 2



[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = ADP1

poll-interval = 3

format-full = <label-full>
format-charging = <label-charging>
format-discharging = <ramp-capacity><label-discharging>

label-discharging = %percentage%%  %time%
label-charging = "    %percentage%%  %time%"
label-full = "    %percentage%%"

ramp-capacity-padding = 2
animation-charging-padding = 2

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
ramp-capacity-10 = 

animation-charging-framerate = 800



[module/cpu]
type = internal/cpu

format = <label>
format-padding = 2

label = CPU %percentage%%



[module/memory]
type = internal/memory

format = <label>
format-padding = 2

label = RAM %percentage_used%%



[module/filesystem]
type = internal/fs
spacing = 0

mount-0 = /

interval = 10
fixed-values = false

format-mounted-prefix = 
format-mounted-prefix-padding-right = 2
format-mounted-padding = 2

label-mounted = %free%

format-unmounted-prefix = 
format-unmounted-prefix-padding-right = 2
format-unmounted-padding = 2

label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.color2}



[module/temperature]
type = internal/temperature

thermal-zone = 0
warn-temperature = 60

format = <label>
format-padding = 2

format-warn = <label-warn>
format-warn-padding = 2

label =  %temperature%
label-warn = %temperature%



[module/volume]
type = internal/volume

format-volume = <ramp-volume><label-volume>
format-volume-padding = 2

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-padding-right = 2


format-muted = <label-muted>
format-muted-padding = 2

label-muted = muted
label-muted-foreground = ${colors.color2}

format-muted-prefix = ""
format-muted-prefix-padding-right = 2



[module/date]
type = internal/date

date = "%a %d.%m "
date-alt = "%a %d.%m.%Y "

time = "%H:%M"
time-alt = "%H:%M:%S"

format = <label>
format-padding = 2
format-prefix-padding-right = 2

format-prefix = 

label = %date%%time%



[module/power]
type = custom/menu

label-open = 
label-open-foreground = ${colors.color2}
label-open-padding = 2

label-close = 
label-close-foreground = ${colors.foreground}
label-close-padding = 2
label-close-margin-left = 2

menu-0-0 = 
menu-0-0-foreground = ${colors.color7}
menu-0-0-exec = systemctl suspend
menu-0-0-padding = 2

menu-0-1 = 
menu-0-1-foreground = ${colors.color4}
menu-0-1-exec = reboot
menu-0-1-padding = 2

menu-0-2 = 
menu-0-2-foreground = ${colors.color2}
menu-0-2-exec = poweroff
menu-0-2-padding = 2
