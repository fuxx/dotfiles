# reload sxhkd shortcut definitions
super + Escape
  pkill -USR1 -x sxhkd

# exit bspwm
super + alt + Escape
  bspc quit

# open urxvt terminal
super + Return
  urxvt

# open rofi application launcher
XF86LaunchA
  rofi -show

{super, alt} + space
  rofi -show

# open rofi to switch to a running application
alt + Tab
  rofi -show window

# close (kill) active node
super +{_,shift + }w
  bspc node -{c,k}

# switch to previous/next desktop
super + {Left,Right}
  bspc desktop -f {prev,next}.local

# select desktop 1..8
super + {1-8}
  bspc desktop -f {1-8}

# preselect from current node
control + alt + {Up,Right,Down,Left}
  bspc node -p {north,east,south,west}

# cancel preselect of current node
control + alt + space
  bspc node -p cancel

# set preselect ratio from 10-90%
control + alt + {1-9}
	bspc node -o 0.{1-9}

# select node in given direction
# move node in given direction
super + {ctrl,shift} + {Up,Right,Down,Left}
  bspc node -{f,s} {north,east,south,west}

# move node to previous/next desktop
super + alt + {Left,Right}
  bspc node -d {prev,next} -f

# move current node to desktop 1..8
super + alt + {1-8}
  bspc node -d {1-8} -f

# set `tiled` node state
# toggle `pseudo_tiled` node state
# toggle `floating` node state
# toggle `fullscreen` node state
super + {t,shift+t,f,shift+f}
  bspc node -t {tiled,"~pseudo_tiled","~floating","~fullscreen"}

# toggle 'monocle' desktop view
super + m
  bspc desktop -l next

# increase/decrease monitor backlight
alt + b + {Prior,Next}
  xbacklight -{inc,dec} 10

{XF86MonBrightnessUp, XF86MonBrightnessDown
  xbacklight -{inc,dec} 10

{XF86AudioRaiseVolume, XF86AudioLowerVolume}
  pactl set-sink-volume 0 {+5%,-5%}

# take a screenshot of the active window, everything and delayed everything
Print
  scrot -u ~/Pictures/%Y-%m-%d_%s.png

control + Print
  scrot ~/Pictures/%Y-%m-%d_%s.png

control + alt + Print
  scrot -d 10 ~/Pictures/%Y-%m-%d_%s.png
